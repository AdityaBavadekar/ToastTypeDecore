<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/success_toast_main_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:clickable="false"
    android:focusable="false"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/success_toast_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/success_toast_main_drawable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:contentDescription="@string/success_icon_description"
            android:src="@drawable/ic_baseline_done_24"
            android:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/success_toast_main_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:text="@string/success"
            android:textAlignment="gravity"
            android:textColor="?attr/colorAccent"
            tools:text="@tools:sample/full_names" />

    </LinearLayout>

</androidx.cardview.widget.CardView>